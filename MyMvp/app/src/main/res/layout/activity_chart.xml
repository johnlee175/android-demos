<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <com.johnsoft.app.mymvp.view.ui.ChartView android:id="@+id/chart"
            android:layout_width="500dp" android:layout_height="500dp"/>
    
    <RadioGroup android:id="@+id/options"
            android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RadioButton android:id="@+id/pie" android:text="Pie Chart" android:checked="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RadioButton android:id="@+id/line" android:text="Line Chart"
                     android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RadioButton android:id="@+id/bar" android:text="Bar Chart"
                     android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RadioGroup>

</LinearLayout>